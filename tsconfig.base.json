{
  "compilerOptions": {
    // === Module & Target ===
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2022"],
    "customConditions": ["development"],

    // === Output Control ===
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    // === Strictness ===
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  }
}
